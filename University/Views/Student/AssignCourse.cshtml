@using System.Collections
@model University.ViewModels.AssignViewModel;
@{
    Layout = "_Layout";
}
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Student</span>
    </div>
    <div>
        <form asp-action="Create" method="post" class="row">
            <div class="mb-3">
                <label asp-for="@Model.student.FirstName" class="form-label">First Name</label>
                <input asp-for="@Model.student.FirstName"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="@Model.student.LastTName" class="text-danger"></span>

            </div>
            <div class="mb-3">
                <label asp-for="@Model.student.Email" class="form-label">Email</label>
                <input asp-for="@Model.student.Email"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="@Model.student.Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="@Model.student.Major" class="form-label">Major</label>
                <input asp-for="@Model.student.Major"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="@Model.student.Major" class="text-danger"></span>
            </div>
            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.course" class="form-label">Professor</label>
                <select class="form-select "
                        asp-for="@Model.course">
                    <option selected>Select one</option>
                    @{
                        foreach (var x in Model.Courses)
                        {
                            <option value="@x">@x.CourseName</option>
                        }
                    }
                </select>
                <span asp-validation-for="@Model.student.Courses" class="text-danger"></span>
            </div>

            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">ADD</button>

            </div>
        </form>

    </div>
</div>