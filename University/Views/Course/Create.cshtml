@model University.ViewModels.CourseViewModel;
@{
    Layout = "_Layout";
}
<div class="overview">
    <div class="title">
        <i class="uil uil-tachometer-fast-alt"></i>
        <span class="text">Adding Course</span>
    </div>
    <div>
        <form asp-action="Create" method="post" class="row">
            <div class="mb-3">
                <label asp-for="@Model.course.CourseName" class="form-label">Course Name</label>
                <input asp-for="@Model.course.CourseName"
                       class="form-control"
                       placeholder="" />
                <span asp-validation-for="@Model.course.CourseName" class="text-danger"></span>

            </div>
            
            <div class="mb-3 col-lg-6">
                <label asp-for="@Model.course.ProfId" class="form-label">Professor</label>
                <select class="form-select "
                        asp-for="@Model.course.ProfId">
                    <option selected>Select one</option>
                    @{
                        foreach (var x in Model.Professors)
                        {
                            <option value="@x.ProfessorId">@x.ProfessorName</option>
                        }
                    }
                </select>
                <span asp-validation-for="@Model.course.ProfId" class="text-danger"></span>
            </div>

            <div class="col-lg-12 d-flex justify-content-center  ">

                <button type="submit" class="btn btn-primary">ADD</button>

            </div>
        </form>

    </div>
</div>